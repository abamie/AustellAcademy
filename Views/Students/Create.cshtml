@model Student

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Student" : "Edit Student";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Student Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Class</label>
        <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes"></select>
    </div>

    <button type="submit" class="btn btn-success">ðŸ’¾ Save</button>
    <a asp-action="Index" class="btn btn-secondary">ðŸ”™ Back</a>
</form>
