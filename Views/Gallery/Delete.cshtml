@model PhotoUploadViewModel

<div class="container mt-4">
    <h2 class="text-center text-danger">Delete Photo</h2>
    
    <div class="card shadow-sm p-4 mt-4">
        <h4>Are you sure you want to delete this photo?</h4>
        
        <div class="text-center">
            <img src="@Model.CurrentImagePath" alt="Photo" class="img-thumbnail" width="250" />
        </div>

        <div class="mt-3">
            <p><strong>Caption:</strong> @Model.Caption</p>
            <p><strong>Category:</strong> @Model.Category</p>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
