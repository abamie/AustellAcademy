@model IEnumerable<AustellAcademyAdmissions.Models.Application>

@{
    ViewData["Title"] = "Applications";
}

<h2>Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Application Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model)
        {
            <tr>
                <td>@application.admission.Name</td>
                <td>@application.admission.Email</td>
                <td>@application.ApplicationDate.ToShortDateString()</td>
                <td>@application.Status</td>
                <td>
                    <form asp-action="ApproveApplication" method="post">
                        <input type="hidden" name="id" value="@application.Id" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="RejectApplication" method="post">
                        <input type="hidden" name="id" value="@application.Id" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>