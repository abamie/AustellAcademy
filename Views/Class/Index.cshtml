@model IEnumerable<Class>

@{
    ViewData["Title"] = "Class List";
}

<h2 class="text-center">Class List</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Class</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Class Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int count = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.ClassName</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this class?');">Delete</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No classes available.</td>
            </tr>
        }
    </tbody>
</table>
