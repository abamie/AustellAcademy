@model IEnumerable<Content>

<div class="container mt-4">
    <h2>Content Management</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Add New Content</a>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Body</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.Body.Substring(0, Math.Min(100, item.Body.Length))...</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="Content Image" class="img-thumbnail" style="max-width: 100px;">
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this content?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
