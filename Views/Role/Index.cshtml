@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>User Roles</h2>
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>
