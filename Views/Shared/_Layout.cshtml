                                    </a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @foreach (var menu in _context.Menus.Where(m => m.IsActive).OrderBy(m => m.Order).ToList())
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@menu.Url">@menu.Title</a>
