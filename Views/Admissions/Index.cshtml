@model List<Student>

@{
    ViewData["Title"] = "Admissions List";
}

<h2>Admissions List</h2>
<a asp-action="Create" class="btn btn-success mb-3">New Admission</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Student Name</th>
            <th>Email</th>
            <th>Course</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admission in Model)
        {
            <tr>
                <td>@admission.Id</td>
                <td>@admission.Name</td>
                <td>@admission.Email</td>
                <td>@admission.Address</td>
                <td>@admission.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@admission.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@admission.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
